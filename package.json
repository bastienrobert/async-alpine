{
  "name": "async-alpine",
  "version": "2.0.1",
  "description": "Load Alpine Components asynchronously. Allows for code splitting and lazy loading components!",
  "author": "Alistair Shepherd <alistair@accudio.com>",
  "license": "Apache-2.0",
  "keywords": [],
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/accudio/async-alpine.git"
  },
  "bugs": {
    "url": "https://github.com/accudio/async-alpine/issues"
  },
  "main": "./dist/async-alpine.script.js",
  "exports": {
    "require": "./dist/async-alpine.cjs.js",
    "import": "./dist/async-alpine.esm.js",
    "default": "./dist/async-alpine.esm.js"
  },
  "files": [
    "dist"
  ],
  "lint-staged": {
    "*": "npm run format"
  },
  "devDependencies": {
    "@playwright/test": "^1.45.3",
    "@stylistic/eslint-plugin": "^2.3.0",
    "@types/alpinejs": "^3.13.11",
    "@types/node": "^22.0.0",
    "esbuild": "^0.23.0",
    "eslint": "^9.7.0",
    "http-server": "^14.1.1",
    "husky": "^9.1.1",
    "lint-staged": "^15.2.7",
    "playwright": "^1.45.3",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  },
  "peerDependencies": {
    "alpinejs": "^3.14.7"
  },
  "scripts": {
    "dev": "tsx scripts/build.js --watch",
    "build": "tsx scripts/build.js",
    "test": "playwright test",
    "lint": "eslint",
    "format": "eslint --fix",
    "prepare": "husky install",
    "push-dev": "echo '*' > dist/CORS && npx surge dist async-alpine-dev.surge.sh && rm dist/CORS"
  }
}
